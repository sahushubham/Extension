{
  "manifest_version": 2,
  "name": "Web Time Tracker",
  "version": "1.0.0",
  "description": "Track the time of Web usage for each sites",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Web Time Tracker"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "file:///*/*",
    "activeTab"
  ]
}